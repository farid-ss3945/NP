<Window x:Class="FTPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cloud File Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Grid x:Name="Reg_1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="250">
            <TextBlock Text="Username:" Margin="-150,-250,5,0" Height="20" Width="70"/>
            <TextBox x:Name="Username" Margin="10,-210,3,0" Height="20" Width="230" />
            <TextBlock Text="Password:" Margin="-150,-140,5,0" Height="20" Width="70"/>
            <TextBox x:Name="Password" Margin="10,-100,3,0" Height="20" Width="230" />
            <Button x:Name="Register" Foreground="White" Background="MediumBlue" Height="30" Width="150" Click="Register_OnClick">Register</Button>
            <Button x:Name="Login" Margin="5,100,5,0" Foreground="White" Background="MediumSeaGreen" Height="30" Width="150" Click="Login_OnClick">Login</Button>
            <Border BorderBrush="Black" BorderThickness="0.1" CornerRadius="4">
                
            </Border> 
        </Grid>
        
        <Grid x:Name="LogView" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="250" Visibility="Collapsed">
            <Button x:Name="Back" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="20" Foreground="White" Background="Red" Click="Back_OnClick">X</Button>
            <TextBlock Text="Username:" Margin="-150,-250,5,0" Height="20" Width="70"/>
            <TextBox x:Name="Username_2" Margin="10,-210,3,0" Height="20" Width="230" />
            <TextBlock Text="Password:" Margin="-150,-140,5,0" Height="20" Width="70"/>
            <TextBox x:Name="Password_2" Margin="10,-100,3,0" Height="20" Width="230" />
            <Button x:Name="Login_2" Margin="5,100,5,0" Foreground="White" Background="MediumSeaGreen" Height="30" Width="150" Click="Login_2_OnClick_OnClick">Login</Button>
            <Border BorderBrush="Black" BorderThickness="0.1" CornerRadius="4">
            </Border>
        </Grid>
        
        <Grid x:Name="Main" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="BackToReg" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Foreground="White" Background="Red" Click="BackToReg_OnClick">‚Üê</Button>
            <Button x:Name="Download" Grid.Row="0" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Download_OnClick">Download</Button>
            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100">File Name:</TextBlock>
            <TextBox x:Name="FileName" Grid.Row="0" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="100">User Name:</TextBlock>
            <TextBox x:Name="Username_3" Grid.Row="0" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Right"></TextBox>
            
            <Button x:Name="Upload" Grid.Row="1" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Upload_OnClick">Upload</Button>
            <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100">File Name:</TextBlock>
            <TextBox x:Name="FileName_2" Grid.Row="1" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="100">User Name:</TextBlock>
            <TextBox x:Name="Username_4" Grid.Row="1" Grid.Column="2" Height="30" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Right"></TextBox>
        </Grid>
        
    </Grid>
        
        
</Window>        